<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.MainController"
            prefHeight="400.0" prefWidth="750.0" alignment="CENTER">

    <VBox prefWidth="750.0" maxHeight="400.0" alignment="TOP_RIGHT" spacing="0">

        <MenuBar maxWidth="750.0" maxHeight="10.0">

            <Menu text="_File">

                <MenuItem mnemonicParsing="true" fx:id="create" text="_New" onAction="#create" />
                <MenuItem mnemonicParsing="true" fx:id="save" text="_Save" onAction="#save" visible="false" />
                <MenuItem mnemonicParsing="true" fx:id="logoff" text="_Log Out" onAction="#logOff"/>

            </Menu>

        </MenuBar>

        <HBox maxWidth="750.0" maxHeight="390.0">

            <GridPane prefWidth="150.0" fx:id="menu" prefHeight="400.0" alignment="TOP_CENTER" hgap="10" vgap="10">

                <Label fx:id="menuText" prefWidth="150.0" text="Menu" GridPane.rowIndex="0" GridPane.columnIndex="0" textAlignment="CENTER"/>

            </GridPane>
            <GridPane prefWidth="250.0" prefHeight="400.0" alignment="TOP_CENTER" hgap="10" vgap="10">

                <Label text="Posts" prefWidth="250" GridPane.rowIndex="0" GridPane.columnIndex="0" textAlignment="CENTER"/>
                <ListView fx:id="notes" GridPane.rowIndex="1" prefWidth="240.0">
                </ListView>

            </GridPane>
            <GridPane fx:id="pn_input" prefWidth="340.0" prefHeight="400.0" alignment="TOP_CENTER" hgap="10" vgap="10">

                <Label fx:id="postText" prefWidth="400.0" text="Note sth." GridPane.rowIndex="0" GridPane.columnIndex="0" textAlignment="CENTER"/>
                <TextArea fx:id="input" prefWidth="340.0" prefHeight="360.0" GridPane.rowIndex="1" visible="false" wrapText="true"/>

            </GridPane>

        </HBox>

    </VBox>

</GridPane>

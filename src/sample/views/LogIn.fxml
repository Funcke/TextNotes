<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane fx:controller="sample.LogInController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <stylesheets>
       <URL value="@../styles/LogInBright.css"/>
    </stylesheets>

    <Label fx:id="header" GridPane.rowIndex="0" GridPane.columnIndex="0" />

    <Label fx:id="uNameHead" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="uName" GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <Label fx:id="pWordHead" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <PasswordField fx:id="pWord" GridPane.rowIndex="4" GridPane.columnIndex="0" />

    <HBox GridPane.rowIndex="5" GridPane.columnIndex="0">
        <Button fx:id="submit" text="Submit" onAction="#submit"/>
        <Button fx:id="discard" text="Discard" onAction="#discard"/>
    </HBox>

    <Label fx:id="footer" text="Don't have an Account?" GridPane.rowIndex="6" GridPane.columnIndex="0" />
    <Button fx:id="signUp" text="signUp" onAction="#signUp" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

</GridPane>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.LogInController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" prefHeight="275" prefWidth="300">

    <Label fx:id="header" GridPane.rowIndex="0" GridPane.columnIndex="0" />

    <Label fx:id="uNameHead" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="uName" GridPane.rowIndex="2" GridPane.columnIndex="0" />

    <Label fx:id="pWordHead" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <PasswordField fx:id="pWord" GridPane.rowIndex="4" GridPane.columnIndex="0" />

    <GridPane fx:id="controls" GridPane.rowIndex="5">
        <Button fx:id="submit" GridPane.rowIndex="0" GridPane.columnIndex="0" text="Submit" onAction="#cmd_submit"/>
        <Button fx:id="discard" GridPane.rowIndex="0" GridPane.columnIndex="1" text="Discard" onAction="#cmd_discard"/>
    </GridPane>


    <Label fx:id="footer" text="Don't have an Account?" GridPane.rowIndex="7" GridPane.columnIndex="0" />
    <Button fx:id="signUp" text="signUp" onAction="#cmd_signUp" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

</GridPane>